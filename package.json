{
  "name": "monorepo",
  "private": true,
  "workspaces": [
    "api",
    "host",
    "ui"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:ui": "USE_REMOTE_API=true turbo dev --filter=host --filter=ui",
    "dev:api": "USE_REMOTE_UI=true turbo dev --filter=host --filter=api",
    "start": "turbo preview --filter=host",
    "build": "turbo build",
    "build:api": "turbo build --filter=api",
    "build:host": "turbo build --filter=host",
    "build:ui": "turbo build --filter=ui",
    "deploy": "NODE_ENV=production turbo build --filter=ui --filter=api",
    "typecheck": "turbo typecheck",
    "db:push": "turbo db:push",
    "db:studio": "turbo db:studio",
    "db:generate": "turbo db:generate",
    "db:migrate": "turbo db:migrate"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "turbo": "^2.7.5"
  },
  "packageManager": "bun@1.2.20",
  "dependencies": {
    "@tanstack/router-plugin": "^1.151.1",
    "drizzle-kit": "^0.31.8",
    "esbuild": "^0.27.2",
    "hono": "^4.11.4",
    "tsx": "^4.21.0",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.17"
  }
}