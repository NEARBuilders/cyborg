{
  "name": "worker",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:all": "bun run build:ui && bun run deploy:ui && bun run deploy:worker",
    "build:ui": "cd ../ui && bun run build:pages && cp .assetsignore dist/.assetsignore",
    "deploy:ui": "cd ../ui && npx wrangler pages deploy dist --project-name=near-agent",
    "deploy:ui:demo": "cd ../ui && npx wrangler pages deploy dist --project-name=near-agent --branch demo",
    "deploy:worker": "wrangler deploy",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply near-agent-db",
    "db:migrate:local": "wrangler d1 migrations apply near-agent-db --local",
    "db:studio": "drizzle-kit studio",
    "holders:preview": "bun run scripts/sync-holders.ts",
    "holders:sync:local": "bun run scripts/sync-holders.ts --apply",
    "holders:sync:remote": "bun run scripts/sync-holders.ts --apply --remote",
    "profiles:sync:local": "bun run scripts/sync-profiles.ts",
    "profiles:sync:remote": "bun run scripts/sync-profiles.ts --remote",
    "sync:all:local": "bun run scripts/sync-all.ts",
    "sync:all:remote": "bun run scripts/sync-all.ts --remote",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "better-auth": "^1.4.15",
    "better-near-auth": "^0.3.4",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.7.0",
    "nanoid": "^5.0.9",
    "near-kit": "^0.10.0",
    "near-social-js": "^2.0.4",
    "openai": "^4.77.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241230.0",
    "better-sqlite3": "^12.6.2",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.9.3",
    "wrangler": "^3.99.0"
  }
}
